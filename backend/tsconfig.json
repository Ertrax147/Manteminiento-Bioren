{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // Importante para Node.js con Express
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}